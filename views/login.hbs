<main class="main-section" id="login-page">
    <div id="logo">
        <img src="images/logo.png" class="img-responsive center-block" alt="CSGOStorage beta">
    </div>
    {{#if message_fail}}
        {{#each message_fail}}
            <div class="alert alert-danger alert-dismissible" role="alert" id="deposit-alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{this}}
            </div>
        {{/each}}
    {{/if}}
    {{#if message_succ}}
        {{#each message_succ}}
            <div class="alert alert-success alert-dismissible" role="alert" id="deposit-alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{this}}
            </div>
        {{/each}}
    {{/if}}
    <div id="login">
        <form action="/login" method="POST" autocomplete="off">
            <div class="input-group" id="user-input">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <input type="text" class="form-control" placeholder="Username" name="username">
            </div>
            <div class="input-group" id="password-input">
                <span class="input-group-addon"><i class="fa fa-unlock-alt"></i></span>
                <input type="password" class="form-control" placeholder="Password" name="password">
            </div>
            <input type="submit" class="btn btn-primary center-block" id="login-btn" value="Login">
        </form>
        <div id="no-account">
            <a href="/register">No account yet? Register here!</a>
        </div>
    </div>
</main>