<div class="panel panel-default">
   <div class="panel-heading main-color-bg">
      <h3 class="panel-title">Users</h3>
   </div>
   <div class="panel-body">
      <div class="row">
         <div class="col-md-12">
            <input class="form-control" id="searchUsers" type="text" placeholder="Filter Users...">
         </div>
      </div>
      <br>
      <table class="table table-striped table-hover">
         <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Joined</th>
            <th>Credits</th>
            <th>IP Address</th>
            <th>TradeUrl</th>
            <th></th>
         </tr>
         {{#each users}}
         <tr>
            <td>{{this.username}}</td>
            <td>{{this.email}}</td>
            <td>{{this.joined}}</td>
            <td>{{this.credits}}</td>
            <td>{{this.ip}}</td>
            <td><a data-toggle="modal" data-user="{{stringify this}}" href="#tradeUrlModal">Show</a></td>
            <td><a class="btn btn-default" href="#editmodal" data-toggle="modal" data-user="{{stringify this}}">Edit</a> <a class="btn btn-danger" href="#delmodal" data-toggle="modal" data-user="{{this.username}}" data-user-id="{{this.id}}">Delete</a></td>
         </tr>
         {{/each}}
      </table>
   </div>
</div>


<div class="modal fade" id="delmodal" tabindex="-1" role="dialog" aria-labelledby="Delete">
   <div class="modal-dialog" role="document">
      <div class="modal-content">
         <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Confirmation</h4>
         </div>
         <div class="modal-body">
            Are you sure you want to delete user <b id="user"></b> 
         </div>
         <div class="modal-footer">
            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
            <a id="deleteuser" type="submit" class="btn btn-danger" href="">Delete</a>
         </div>
      </div>
   </div>
</div>


<div class="modal fade" id="editmodal" tabindex="-1" role="dialog" aria-labelledby="Edit">
   <div class="modal-dialog" role="document">
      <div class="modal-content">
         <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Edit User <b id="user"></b></h4>
         </div>
         <div class="modal-body">
            <form method="post" action="/admin/action/edituser">
               <div class="form-group">
                  <label for="usernameField">Username</label>
                  <input type="text" class="form-control" id="usernameField" placeholder="Username" name="username">
               </div>
               <div class="form-group">
                  <label for="emailField">Email address</label>
                  <input type="email" class="form-control" id="emailField" placeholder="Email address" name="email">
               </div>
               <div class="form-group">
                  <label for="tradeUrlField">Tradeurl</label>
                  <input type="text" class="form-control" id="tradeUrlField" placeholder="Tradeurl" name="tradeUrl">
               </div>
               <div class="form-group">
                  <label for="creditsField">Credits</label>
                  <input type="text" class="form-control" id="creditsField" placeholder="Credits" name="credits">
               </div>
               <div class="checkbox">
                  <label>
                    <input type="checkbox" name="isAdmin" id="isAdminField"> Admin
                  </label>
               </div>
            
         </div>
         <div class="modal-footer">
            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
            <button id="edituser" type="submit" class="btn btn-primary">Save Changes</button>
            </form>
         </div>
      </div>
   </div>
</div>

<div class="modal fade" id="tradeUrlModal" tabindex="-1" role="dialog" aria-labelledby="TradeUrl">
   <div class="modal-dialog" role="document">
      <div class="modal-content">
         <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel"><b id="user"></b><b>s</b> TradeUrl</h4>
         </div>
         <div class="modal-body">
            <div class="form-group">
              <label for="tradeUrl">TradeUrl:</label>
              <input type="email" class="form-control" id="tradeUrl" placeholder="TradeUrl">
            </div>
         </div>
         <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
         </div>
      </div>
   </div>
</div>