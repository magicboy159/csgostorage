<main class="main-section" id="main-page">
        <div id="logo">
            <img src="images/logo.png" class="img-responsive center-block" alt="CSGOStorage beta">
        </div>
        {{#if indexMessage_succ}}
            {{#each indexMessage_succ}}
                <div class="alert alert-success alert-dismissible deposit-alert" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ this }}
                </div>
            {{/each}}
        {{/if}}
        {{#unless user}}
            <div class="alert alert-danger alert-dismissible deposit-alert hidden" role="alert" id="login-alert">
                <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <span class="warning-sign"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i></span>
                You must login in order to peform this action.
            </div>
        {{/unless}}
        <div class="alert alert-danger alert-dismissible deposit-alert hidden" id="need-tradeurl" role="alert">
            <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <span class="warning-sign"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i></span>
            In order to withdraw you must provide a tradeurl.
        </div>
        <div class="alert alert-danger alert-dismissible deposit-alert hidden" id="funds-alert" role="alert" id="funds-alert">
            <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <span class="warning-sign"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i></span>
            Insufficient funds to withdraw this item.
        </div>
        <div class="alert alert-danger alert-dismissible deposit-alert" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <span class="warning-sign"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i></span>
            The minimum deposit is $10. Items will disappear when out of stock.
        </div>

        <section id="deposit-container">
            <div class="row">
                <div class="container-fluid">
                    <div class="col-md-7" id="weapons">

                    {{#row 3}}
                        <div class="row">
                        {{#col 4 this}}
                            <div class="col-md-3">
                                <div class="weapon-slot-container">
                                    <div class="weapon-slot">
                                        <img src="{{itemValue index=this property="picUrl"}}" class="img-responsive" alt="">
                                        <span class="itemName">{{itemValue index=this property="itemName"}}</span>
                                        <span class="exterior">{{itemValue index=this property="exterior"}}</span>
                                        <span class="price">${{itemValue index=this property="price"}}</span>
                                    </div>
                                </div>
                            </div>
                        {{/col}}
                        </div>
                    {{/row}}

                    </div>
                    <div class="col-md-5" id="controls">
                    {{#if user}}
                    <div id="balance"><img src="images/coins.png" alt="Balance"> <span>{{parsebalance user.credits}}</span></div>
                    {{else}}
                    <div id="balance"><img src="images/coins.png" alt="Balance"> <span>0.00</span></div>
                    {{/if}}
                    <div id="deposit">
                        <button id="depositbutton" class="btn btn-primary center-block" data-active="{{#if user}}true{{else}}false{{/if}}">Deposit</button>
                        <span class="text-center">* We will grant the current average market price for your skin. We will always let you know how much you receive before the trade gets accepted</span>
                    </div>
                        <div id="gift-code">
                            <input type="text" class="form-control" placeholder="Enter a gift code" aria-describedby="Gift Code" maxlength="19">
                            <button class="btn btn-primary center-block" id="redeem-gift">Redeem</button>
                        </div>
                        <div id="withdraw">
                            <span id="selected">$0.00 Selected</span>

                            <button class="btn btn-danger center-block" data-tradeurl="{{#if true}}true{{else}}false{{/if}}" id="withdraw-button">Withdraw</button>
                        </div>
                    </div>
                </div>
                
            </div>
        </section>
</main>